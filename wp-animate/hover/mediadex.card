selector {
      position: relative;
      overflow: hidden;
      display: inline-block;
}

selector::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(to right, #EF7D00, #DE007A);
      opacity: 0;
      z-index: 10;
      transition: opacity 0.3s ease;
    }
    selector:hover::before {
        opacity: 0.7;
    }